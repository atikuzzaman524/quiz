      'file' => 'quiz_dashboard.admin.inc',
    ),
    'quiz_top_scorers' => array(
      'arguments' => array('scorer' => NULL),
      'file' => 'quiz_dashboard.admin.inc',
    ),
    'quiz_grade_range' => array(
      'arguments' => array('range' => NULL),
